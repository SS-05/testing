{{page-title "Login"}}
<h3 class="text-center">Welcome to our Application</h3>
<h5 class="text-center">Kindly login to proceed</h5>
<div class="container">
    <div class="row">
        <form name="l_form" autocomplete="off">
            <div class="mb-3 form-outline">
                <label class="form-label mx-2">User Name</label>
                <Input @value={{this.un}} class="form-control" @type="text" placeholder="Enter Username" />
            </div>
            <div class="mb-3 form-outline">
                <label class="form-label mx-2">Password</label>
                <Input @value={{this.pw}} class="form-control" @type="password" placeholder="Enter Password" />
            </div>
            <div class="text-center">
                <button type="button" class="btn btn-primary" {{action 'homePage' }}>LOGIN</button>
            </div>
        </form>
    </div>
</div>
{{outlet}}